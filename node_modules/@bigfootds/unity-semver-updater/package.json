{
  "name": "@bigfootds/unity-semver-updater",
  "version": "0.0.5",
  "description": "NodeJS tool to update a Unity project's version to a specified format - typically the semver format.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "build:code": "tsc",
    "build:docs": "jsdoc ./src -r -c ./jsdoc.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigfootDS/unity-semver-updater.git"
  },
  "keywords": [
    "unity",
    "gamedev",
    "cicd",
    "ci",
    "semver",
    "utility"
  ],
  "author": {
    "name": "Alex Stormwood",
    "email": "alex@bigfootds.com",
    "url": "https://github.com/AlexStormwood"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BigfootDS/unity-semver-updater/issues"
  },
  "homepage": "https://github.com/BigfootDS/unity-semver-updater#readme",
  "devDependencies": {
    "@types/node": "^20.14.10",
    "jest": "^29.7.0",
    "typescript": "^5.5.3"
  }
}
